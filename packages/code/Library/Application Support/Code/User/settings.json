// Place your settings in this file to overwrite the default settings
{
    "editor.fontSize": 13,
    "editor.lineHeight": 19,
    "editor.roundedSelection": false,
    "editor.cursorBlinking": "solid",
    "editor.lineNumbers": "on",
    "editor.detectIndentation": false,
    "editor.minimap.enabled": false,

    "[typescript]": {
        "editor.codeActionsOnSave": {
            "source.fixAll,eslint": true
        },
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    
    "explorer.openEditors.visible": 0,
    "explorer.decorations.colors": false,
    "explorer.confirmDelete": false,

    "window.restoreWindows": "none",
    "window.zoomLevel": 0,
    "window.nativeFullScreen": false,
    "window.titleBarStyle": "custom",

    "workbench.sideBar.location": "right",
    "workbench.activityBar.visible": true,
    "workbench.statusBar.visible": true,
    "workbench.iconTheme": "vs-nomo-dark",
    "workbench.enableExperiments": false,

    "breadcrumbs.filePath": "off",
    "breadcrumbs.symbolPath": "off",
    "breadcrumbs.enabled": false,
    "extensions.ignoreRecommendations": true,

    "files.eol": "\n",

    "update.mode": "manual",
    "extensions.autoUpdate": false,

    "terminal.integrated.cursorBlinking": false,
    // Disable for python, enable for ts
    "terminal.integrated.inheritEnv": false,

    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    // Markdown
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "css.lint.universalSelector": "error",
    "css.lint.important": "error",
    "css.lint.duplicateProperties": "error",
    "css.lint.emptyRules": "error",
    "css.lint.float": "warning",
    "css.lint.zeroUnits": "warning",
    "css.validate": true,
    "[css]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "MikeBovenlander.formate"
    },
    "less.lint.universalSelector": "error",
    "less.lint.important": "error",
    "less.lint.duplicateProperties": "error",
    "less.lint.emptyRules": "error",
    "less.lint.float": "warning",
    "less.lint.zeroUnits": "warning",
    "less.validate": true,
    "[less]":{
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "MikeBovenlander.formate"
    },
    "scss.lint.universalSelector": "error",
    "scss.lint.important": "error",
    "scss.lint.duplicateProperties": "error",
    "scss.lint.emptyRules": "error",
    "scss.lint.float": "warning",
    "scss.lint.zeroUnits": "warning",
    "scss.validate": true,
    "[scss]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "MikeBovenlander.formate"
    },
    "formate.verticalAlignProperties": false,

    "eslint.packageManager": "yarn",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.format.semicolons": "insert",
    "js/ts.implicitProjectConfig.checkJs": true,

    // HTML
    "html.format.indentInnerHtml": true,

    // Ruby/Solargraph
    "ruby.intellisense": false,
    "solargraph.useBundler": true,
    "solargraph.hover": true,

    // Python
    "python.dataScience.askForKernelRestart": false,
    "python.autoComplete.addBrackets": true,
    "python.formatting.provider": "autopep8",
    "[python]": {
        "editor.formatOnSave": true
    },

    // Jupyter
    "jupyter.alwaysTrustNotebooks": true,
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],

    // JSON (with comments)
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "gitlens.hovers.enabled": false,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    // Git diff
    "diffEditor.renderSideBySide": true,

    // Latex
    "latex-workshop.view.pdf.viewer": "tab",

    // MS Edge
    "vscode-edge-devtools.enableNetwork": true
}